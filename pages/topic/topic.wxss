.topicUserInfo text{
  display: inline-block;
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 20rpx;
  position: absolute;
  top: 5rpx;
}
.topicText{
  display: flex;
}
.topicText text{
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  flex: 3;
  padding-left: 30rpx;
}
.topicText image{
  height: 120rpx;
  flex: 1;
  border-radius: 10rpx;
}
.icon-jiahao1{
  position: fixed;
  font-size: 100rpx;
  color: var(--themeColor);
  bottom: 5%;
  right: 5%;
}