.cate_container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
}

.cate_container .cate_rows{
  width: 50%;
  margin-top: 40rpx;
}


.cate_container .cate_rows .cate_box .cate_content{
  position: relative;
  padding: 10rpx 30rpx;
}

.cate_container .cate_rows .cate_box .cate_content .cate_img{
  width: 320rpx;
  height: 200rpx;
  position: relative;
  background-color: rgba(68, 68, 68, 0.5);
  border-radius: 20rpx;
}

.cate_container .cate_rows .cate_box .cate_content .cate_img image{
  width: 320rpx;
  height: 200rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: -1;
  border-radius: 20rpx;
}

.cate_container .cate_rows .cate_box .cate_content .cate_txt{
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  /* 相对父元素，距离上下左右都是0，相对定位在父元素之上 */
  height:100%;
  width:100%;
}

.cate_container .cate_rows .cate_box .cate_content .cate_txt text{
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  /* 绝对定位设置偏移量，将元素居中定位 */
  font-size:40rpx;
  color: #fff;
}