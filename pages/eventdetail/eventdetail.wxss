.pages{
  position: relative;
  background-color: #DCDCDC;
}
.edetail_img image{
  width: 100%;
  height: 380rpx;
}
.edetail_content{
  margin-top: 20rpx;
}
.edetail_item{
  border-top: 1rpx solid 	#828282;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
}
.edetail_item text:nth-child(1){
  margin-left: 30rpx;
  font-size: 45rpx;
}
.edetail_item text:nth-child(2){
  font-size: 36rpx;
  color: #696969;
  margin-left: 20rpx;
  position: absolute;
  top: 0;
}
.edetail_item text:nth-child(3){
  margin-left: 220rpx;
  color: #4F4F4F;
  position: absolute;
  top: 0;
  font-size: 36rpx;
}
.icon1,.icon2,.icon6,.icon7{
  color: var(--themeColor);
}
.icon3{
  color: 	#FF4500;
}
.icon4,.icon5{
  color: #2E8B57;
}
.icon8{
  color: red;
}
.edetail_footer{
  display: flex;
  position: fixed;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 0;
  border-top: 1rpx solid #828282;
  border-bottom: 1rpx solid #828282;
  width: 100%;
  height: 120rpx;
  margin-bottom: 8rpx;
  padding: 0 60rpx;
  z-index: 99;
  background:rgb(255, 255, 255, .2);
}
.like{
  margin-left: 54rpx;
}
.collection{
  margin-left: 54rpx;
}
.edetail_footer button{
  font-weight: normal;
  line-height: 45rpx;
}

.browse,.like,.evaluate,.collection{
  font-size: 34rpx;
  text-align: center;
}
.active{
  color: var(--themeColor);
}

