.bar{
  display: flex;
}

.bar .bar_nav {
  padding: 15rpx 20rpx;
  width: 25%;
  border-bottom: 2rpx solid #cccccc;
  position: relative;
}

.bar .bar_nav .bar_text{
  font-size: 40rpx;

}

.bar .bar_nav .bar_line{

  width: 156rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  margin-left: 20rpx;
}

.bar .bar_nav .active{
  border-bottom: 5rpx solid var(--themeColor);
}

.activity_container{
  margin-top: 30rpx;
}

.activity_container .activity_content{
  width: 100%;
  height: 240rpx;
  padding: 15rpx 15rpx;
  display: flex;
  border-bottom: 1rpx solid #cccccc;
  margin-top: 16rpx;
}

.activity_container .activity_content .activity_text_area{
  padding-left: 5rpx;
  flex: 6;
  position: relative;
}

.activity_container .activity_content .activity_text_area .text_title text{
  font-size: 36rpx;
}

.activity_container .activity_content .activity_text_area .avtivity_time{
  margin-top: 20rpx;
  position: absolute;
  bottom: 10rpx;
}

.activity_container .activity_content .activity_text_area .avtivity_time text{
  font-size: 30rpx;
  color: #989898;
}

.activity_container .activity_content .activity_img{
  margin-left: 5rpx;
  flex: 3;
}
.activity_container .activity_content .activity_img image{
  width: 270rpx;
  height: 200rpx;
}
