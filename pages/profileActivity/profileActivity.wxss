.active_content {
  height: 220rpx;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
}

.active_content .active_list{
  display: flex;
  padding: 10rpx 0;
  position: relative;
}

.active_content .active_list .active_img{
  flex: 2;
  height: 220rpx;
  line-height: 220rpx;
}

.active_content .active_list .active_img image{
  width: 260rpx;
  height: 190rpx;
  margin: 10rpx 20rpx;
}

.active_content .active_list .active_info{
  flex: 3;
}

.active_content .active_list .active_info > text:first-child{
  font-weight: bold;
  margin-top: 20rpx;
}

.active_content .active_list .active_info .active_desc{
  display: flex;
}

.active_content .active_list .active_info .active_desc .active_icon{
  padding: 10rpx 4rpx;
  font-size: 30rpx;
}

.active_content .active_list .active_info .active_desc text{
  font-size: 32rpx;
  color: #848484;
  margin-left: 20rpx;
  padding-top: 5rpx;
}
.activity_status{
  position: absolute;
  right: 10rpx;
  bottom: 20rpx;
}
.status{
  font-weight: 400;
  white-space: nowrap;
  border: 1rpx solid #ccc;
  background-color: var(--themeColor);
  color: #fff;
}
